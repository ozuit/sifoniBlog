{% extends 'admin/layout.html.twig' %}
{% block content %}
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Date Up</th>
                <th>Categories</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% set i = 1 %}
        {% for article in articles %}     
            <tr class="odd gradeX">
                <td class="text-center">{{ i }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.updated_at|date('d/m/Y') }}</td>
                <td>{{ article.name }}</td>
                <td class="text-center">
                	<a href="/admin/article/update/{{article.slug}}.html"><button type="button" class="btn btn-warning">Update</button></a>
                	<a href="/admin/article/delete/{{article.slug}}.html"><button type="button" class="btn btn-danger">Delete</button></a>
                </td>
            </tr>
        {% set i = i + 1 %}
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}