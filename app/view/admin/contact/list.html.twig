{% extends 'admin/layout.html.twig' %}
{% block content %}
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Status</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        {% set i = 1 %}
        {% for msg in messages %}     
            <tr class="odd gradeX">
                <td class="text-center">{{ i }}</td>
                <td style="width:100px">{{ msg.name }}</td>
                <td>{{ msg.email }}</td>
                <td style="padding:0"><textarea rows="3" style="width:100%">{{ msg.message }}</textarea></td>
                <td style="width:30px">
                    {% if msg.status == 'true' %}
                    <center><img src="/styles/admin/img/ok.png" width="50px" height="50px" title="Đã xem"></center>
                    {% else %}
                    <center><a href="/admin/contact/status/{{ msg.id }}"><img src="/styles/admin/img/look.png" width="50px" height="50px" title="Đánh dấu đã xem"></a></center>
                    {% endif %}
                </td>
                <td style="width:30px">
                    <center><a href="/admin/contact/delete/{{ msg.id }}"><img src="/styles/admin/img/delete.png" width="50px" height="50px" title="Xóa góp ý"></a></center>
                </td>
            </tr>
        {% set i = i + 1 %}
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}