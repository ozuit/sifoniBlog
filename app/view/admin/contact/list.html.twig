{% extends 'admin/layout.html.twig' %}
{% block content %}
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>City</th>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
        {% set i = 1 %}
        {% for msg in messages %}     
            <tr class="odd gradeX">
                <td class="text-center">{{ i }}</td>
                <td>{{ msg.name }}</td>
                <td>{{ msg.email }}</td>
                <td>{{ msg.phone }}</td>
                <td>{{ msg.city }}</td>
                <td>{{ msg.message }}</td>
            </tr>
        {% set i = i + 1 %}
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}